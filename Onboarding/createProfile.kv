WindowManager:
    FirstStep:


<FirstStep>:
    id: firstStep

    MDFloatLayout:
        orientation: 'vertical'
        MDLabel:
            text: 'Your profile'
            halign: 'center'
            pos_hint: {'center_y': 0.8}

        MDLabel:
            text: 'Choose a username and upload a profile picture to be used publicly'
            halign: 'center'
            pos_hint: {'center_y': 0.7}
            font_size: 14

        MDTextFieldRound:
            id: username
            hint_text: 'Username'
            size_hint: (.7, .08)
            normal_color: [1, 1, 1, 1]
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}

        MDRoundFlatButton:
            text: 'Save username'
            size_hint: .85, .07
            text_color: 0, 0, 0, 1
            md_bg_color: [153/255, 102/255, 206/255, .9]
            text_color: [1, 1, 1, 1]
            pos_hint: {'center_x':0.5, 'center_y': 0.3}